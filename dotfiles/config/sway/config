# ScreenShot
# capture all screens to clipboard    
bindsym Print exec grim - | wl-copy

# Capture and save all screens to screenshot
bindsym $mod+Print exec grim - | wl-copy | grim ~/Pictures/Screenshots/$(date +'%s_grim.png') | viewnior ~/Pictures/Screenshots/$(date +'%s_grim.png')

